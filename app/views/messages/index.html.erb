  <div class="box">
    <!--左-->
    <%= render partial: "shared/left_box" %>
    
    <div class="right_box">
      <div class="header">
        <div class="header__group">
          <div class="header__group-name">グループ名</div>
          <%= link_to "#", :class => "header__group-edit" do %>
            <p>edit</p>
          <% end %>
        </div>
        
        <div class="header__member">
          Member:
          <!--メンバー名取得-->
          <i>Yohei</i>
        </div>
      </div>
      
      <!--チャットエリア-->
      <div class="body" >
        <!--部分テンプレート-->
        <!--controllerで@変数をeach文で回してpartialのlocals{}内で使用する-->
        <%= render partial: "right_box_message" %>
      </div>
      
      <!--テキスト入力-->
      <div class="footer">
        <form class="footer__form" action="/#/#" method="post" >
          <input type="text" name="text" placeholder="type a message" class="footer__form-text"/>
          
          <label class="chat-file">
            <input class="image" type="file" name="image">
              <div class="fa fa-image"></div>
          </label>
          
          <input type="submit" value="Send" class="footer__form-send"/>
        </form>
      </div>
    </div>
    
  </div>
